USE DATABASE UkPostcodes;
USE SCHEMA Postcodes;

DROP TABLE IF EXISTS Postcodes;

CREATE TABLE IF NOT EXISTS Postcodes
(
Postcode string,
CountyCode string,
DistrictCode string,
CountryCode string,
Latitude decimal?,
Longitude decimal?,
INDEX idx_Postcodes CLUSTERED (Postcode)
DISTRIBUTED BY HASH (CountyCode, DistrictCode)
);